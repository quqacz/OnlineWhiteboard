<%- include ('partials/header') %>
<%- include ('partials/groupNavbar') %>

<div class="container" style="margin-top:50px">
	<div class="row">
		<div class="col-sm-8">
			<div class="row">
				<div class="col-sm-3">
					<img src="https://wiki.dave.eu/images/4/47/Placeholder.png" class="img-thumbnail rounded-circle" alt="img_group">
				</div>
				<div class="col-sm-9">
					<div class="d-flex flex-column" style="height: 100%">
						<div class="d-flex" style="height: 25%; align-items: center">Nazwa Grupy</div>
						<div class="d-flex" style="height: 50%; align-items: center">Opis Grupy</div>
						<div class="d-flex" style="height: 25%; align-items: center">Kod Dołączenia</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<a class="nav-link active" aria-current="page" href="/group/:id/board">
			<button type="button" class="btn btn-outline-primary col-sm-3" style="margin-top: 10px">Dołącz do tablicy</button>
		</a>
	</div>
	<div class="row borderMain justify-content-center" style="margin-top: 10px">
		<h1>Członkowie Grupy</h1>
		<%for(let i = 0; i < users.length; i++){%>
		<div class="row borderHighlight m-2 p-2" style="width: 90%">
			<div class="col-sm-1">
				<img src="<%=users[i].profile_pic%>" class="img-thumbnail rounded-circle" alt="img_user">
			</div>
			<div class="col-sm-9">
				<div class="d-flex flex-column" style="height: 100%">
					<div class="d-flex" style="height: 50%; align-items: center"><%= users[i].first_name%></div>
					<div class="d-flex" style="height: 50%; align-items: center"><%= users[i].last_name%></div>
				</div>
			</div>
			<div class="col-sm-2">
				<div class="d-flex flex-column center" style="height: 100%">
					<button type="button" class="btn btn-outline-primary" disabled>Usuń z grupy</button>
				</div>
			</div>
		</div>
		<%};%>
	</div>
</div>

<script> const groupId = "<%=groupData._id%>"; </script>
<%- include ('partials/footer') %>