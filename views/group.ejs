<%- include ('partials/header') %>
<%- include ('partials/navbar') %>

<div class="grad-anim min-vh-100">
<div class="container" style="padding-top:50px">
	<div class="row">
		<div class="col-sm-8">
			<div class="row">
				<div class="col-sm-3">
					<img src="https://wiki.dave.eu/images/4/47/Placeholder.png" class="img-thumbnail rounded-circle" alt="img_group">
				</div>
				<div class="col-sm-9">
					<div class="d-flex flex-column" style="height: 100%">
						<div class="d-flex" style="height: 25%; align-items: center"><h1><%= groupData.groupName%></h1></div>
						<div class="d-flex midfont" style="height: 50%; align-items: center"><%= groupData.description%></div>
						<div class="d-flex" style="height: 25%; align-items: center"><h2><%= groupData.entryCode%></h2></div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<%if(groupData.owner._id.toString() === currentUser._id.toString()){%>
		<div class="row col-sm-4 justify-content-center p-1" style="margin-top: 10px">
			<button class="btn btn-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#nowalekcja" aria-expanded="false" aria-controls="nowalekcja"><h2>Dodaj Nową Lekcję</h2></button>
			<form class="collapse" id="nowalekcja" action="/group/<%= groupData._id%>/lesson/add" method="POST">
				<div class="row" style="margin-top: 10px">
					<input type="text" class="form-control borderHighlight" name="topic" placeholder="Tytuł Lekcji" required>
				</div>
				<div class="row" style="margin-top: 10px">
					<button class="btn btn-outline-secondary">Dodaj lekcje</button>
				</div>
			</form>
		</div>
	<%}%>
	<div class="row borderList justify-content-center p-1 bg-light" style="margin-top: 10px">
		<h1>Lekcje</h1>
		<%for(let i = 0; i < groupData.lessons.length; i++){%>
		<div class="row grad borderHighlightRound m-2 p-2" style="width: 90%">
			<div class="col-sm-1">
				<img src="https://wiki.dave.eu/images/4/47/Placeholder.png" class="img-thumbnail rounded-circle" alt="img_user">
			</div>
			<div class="col-sm-9">
				<div class="d-flex flex-column" style="height: 100%">
					<div class="d-flex" style="height: 100%; align-items: center"><%= groupData.lessons[i].topic%></div>
				</div>
			</div>
			<div class="col-sm-2">
				<div class="d-flex flex-column center" style="height: 100%">
					<a class="nav-link active" aria-current="page" href="/group/<%= groupData._id%>/lesson/<%= groupData.lessons[i]._id%>">
						<button type="button" class="btn btn-outline-secondary">Dołącz do tablicy</button>
					</a>
				</div>
			</div>
		</div>
		<%};%>
	</div>
	<div class="row borderList justify-content-center p-1 bg-light" style="margin-top: 10px">
		<h1>Członkowie Grupy</h1>
		<%for(let i = 0; i < groupData.students.length; i++){%>
		<div class="row grad borderHighlightRound m-2 p-2" style="width: 90%">
			<div class="col-sm-1">
				<img src="https://wiki.dave.eu/images/4/47/Placeholder.png" class="img-thumbnail rounded-circle" alt="img_user">
			</div>
			<div class="col-sm-9">
				<div class="d-flex flex-column" style="height: 100%">
					<div class="d-flex" style="height: 50%; align-items: center"><%= groupData.students[i].name%></div>
					<div class="d-flex" style="height: 50%; align-items: center"><%= groupData.students[i].lastName%></div>
				</div>
			</div>
			<%if(groupData.owner._id.toString() === currentUser._id.toString()){%>
				<div class="col-sm-2">
					<div class="d-flex flex-column center" style="height: 100%">
						<form action="/group/<%- groupData._id%>/user/<%-groupData.students[i]._id%>?_method=DELETE" method="POST">
							<button type="submit" class="btn btn-outline-secondary">Usuń z grupy</button>
						</form>
					</div>
				</div>
			<%}%>
		</div>
		<%};%>
	</div>
</div>
</div>

<script> const groupId = "<%=groupData._id%>"; </script>
<%- include ('partials/footer') %>